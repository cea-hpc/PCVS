#!/bin/sh

MPC_AUTO_KILL_TIMEOUT=500

#Make sure we run in a temporary directory for parallel tests
MPCRUN_ARGS+=" --tempdir"

MPC_PROC_NB_LIST="1 2"
MPC_TASK_NB_LIST="4"

#generate compile command. for standard build
common_insert_test "compile_LANL_fs_test" "0" "cp -r ${MPC_TEST_CURRENT_SOURCE_DIR}/* ${MPC_TEST_CURRENT_WORK_DIR} && cd ${MPC_TEST_CURRENT_WORK_DIR}/fs_test; make"

TEST_ARGS="-nodb -type 1 -size 4096 -nobj 8192 --collective -target ./out.dat"

helper_configuration_loop "test_LANL_fs_test" "${MPC_TEST_CURRENT_WORK_DIR}/fs_test/fs_test.x ${TEST_ARGS}" "compile_LANL_fs_test"
