#!/bin/sh

REQUIRE_OPENMP=true
COMMON_FILES="${MPC_TEST_CURRENT_SOURCE_DIR}/../common/common.c"


set_openmp_threads_list

MPC_PROC_NB_LIST=1
MPC_TASK_NB_LIST=1
MPC_THREAD_NB_LIST=1
IDA="1 3 9 27 81 243 729 2187 6561 19683 59049"

CFLAGS_M="${CFLAGS}"

for ida in ${IDA}
do
	CFLAGS="${CFLAGS} -DIDA=$ida -fopenmp ${PRIVATIZATION} -DOMPVER2 -DOMPVER3 -I${MPC_TEST_CURRENT_SOURCE_DIR}/../common/ -lm"
	openmp_configuration "IDA$ida"
    CFLAGS="${CFLAGS_M}"
done
