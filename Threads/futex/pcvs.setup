#!/bin/sh

pcvs_src_current=$pcvs_src/$1
pcvs_build_current=$pcvs_testbuild/$1

for f in `find $pcvs_src_current -name "*.c"`
do
	src_file=`basename ${f}`
	name="`echo "$src_file" | perl -pe "s/\.[a-zA-Z0-9]+$//g"`"
	echo "$name:"
	echo "    type: 'complete'"
	echo "    cargs: '-DSCTK_FUTEX_SUPPORTED'"
	echo "    files: '@SRCPATH@/$src_file'"
	echo "    n_proc: ~"
	echo "    n_mpi: ~"
	echo "    n_omp: ~"
	echo "    net: ~"
	echo ""
done
