#!/bin/sh

gen_makefile()
{
echo "

TARGETS= hdf5_pattern hdf5_pattern_opt

all : \$(TARGETS)

CC=\${TS_CC}

hdf5_pattern : ${MPC_TEST_CURRENT_SOURCE_DIR}/an.c ${MPC_TEST_CURRENT_SOURCE_DIR}/bn.c
	\$(CC) -g -O0 $^ -fdump-tree-gimple -o ./executables/\$@

hdf5_pattern_opt :  ${MPC_TEST_CURRENT_SOURCE_DIR}/an.c ${MPC_TEST_CURRENT_SOURCE_DIR}/bn.c
	\$(CC) -g -O3 $^ -fdump-tree-gimple -o ./executables/\$@
"
}

MPC_AUTO_KILL_TIMEOUT=5

gen_makefile > ${PCVS_CWORK_DIR}/Makefile
makefile_configuration "compile_GCC_hdf5_pattern" "-C ${PCVS_CWORK_DIR}/"

LIST_TESTS_NAME="hdf5_pattern hdf5_pattern_opt"

for exe in ${LIST_TESTS_NAME}
do
	helper_configuration_loop "test_${exe}" "${PCVS_CWORK_DIR}/executables/${exe}" "compile_GCC_hdf5_pattern"
done
