#!/bin/sh
#MPC_PROC_NB_LIST=1
#MPC_THREAD_LIST=pthread

MPC_TASK_NB_LIST="2 4"
MPC_PROC_NB_LIST="2 4"


COMMON_FILES="${MPC_TEST_CURRENT_SOURCE_DIR}/osu_coll.c"
CFLAGS="${CFLAGS} -I${MPC_TEST_CURRENT_SOURCE_DIR}/"

OSU_COLLECTIVE_LIST=""
for i in $BUILD_DIR/$VAR/mpi/collective/*.c; do
if test "$i" != "$BUILD_DIR/$VAR/mpi/collective/osu_coll.c"; then
    OSU_COLLECTIVE_LIST="$OSU_COLLECTIVE_LIST `basename $i .c`"
fi
done



multiple_configuration "$OSU_COLLECTIVE_LIST "
