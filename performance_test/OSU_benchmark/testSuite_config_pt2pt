#!/bin/sh
#MPC_PROC_NB_LIST=1
#MPC_THREAD_LIST=pthread
MPC_TASK_NB_LIST="2"
MPC_PROC_NB_LIST="2"

COMMON_FILES="${PCVS_CSOURCE_DIR}/osu_pt2pt.c"
CFLAGS="${CFLAGS} -I${PCVS_CSOURCE_DIR}/"

OSU_COLLECTIVE_LIST=""
for i in $BUILD_DIR/$VAR/mpi/pt2pt/*.c; do
if test "$i" != "$BUILD_DIR/$VAR/mpi/pt2pt/osu_pt2pt.c"; then
    OSU_COLLECTIVE_LIST="$OSU_COLLECTIVE_LIST `basename $i .c`"
fi
done



multiple_configuration "$OSU_COLLECTIVE_LIST" 

