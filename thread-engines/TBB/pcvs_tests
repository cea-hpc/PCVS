#!/bin/sh
#AS TBB cannot be built without external patched GCC
#use CXX_EXTERNAL_PATH to load a new compiler
#ex: CXX_EXTERNAL_PATH="path" ./mpc_validation

if [ ! -z "${CXX_EXTERNAL_PATH}" ] ; then
	CXX_ARGS="$CXX_ARGS -cc=${CXX_EXTERNAL_PATH}"
fi

CXX_ARGS="$CXX_ARGS -std=c++11 -DUSE_PTHREAD -DTEST_USES_TBB=1 -ltbb -ldl"
MPC_NET_LIST="tcp"
MPC_PROC_NB_LIST="1 2"
MPC_TASK_NB_LIST="1 2 4 8"

COMMAND_OPTIONS="-v"
multiple_configuration
